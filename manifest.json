{
  "manifest_version": 3,
  "name": "USCF MSA Visual Fix",
  "version": "1.0",
  "description": "Fixes visual alignment on USCF MSA pages and checks SafeSport certification",
  "permissions": [
    "activeTab",
    "background",
    "storage"
  ],
  "host_permissions": [
    "https://www.uschess.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.uschess.org/msa/MbrDtl*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}